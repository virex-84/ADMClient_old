<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:orientation="vertical" android:id="@+id/linearLayout1" android:layout_gravity="top" android:layout_height="wrap_content">
        <EditText android:text="" android:layout_width="match_parent" android:id="@+id/etTitle" android:layout_height="wrap_content" android:singleLine="true" android:maxLines="1"></EditText>
        <EditText android:text="" android:layout_width="match_parent" android:id="@+id/etText" android:layout_height="200sp" android:scrollHorizontally="true" android:scrollbars="vertical" android:gravity="top"></EditText>
    </LinearLayout>
    <AbsoluteLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/absoluteLayout1">
        <Button android:id="@+id/btnCancel" android:text="Отмена" android:layout_width="100sp" android:layout_height="match_parent" android:layout_x="168dip" android:layout_y="4dip"></Button>
        <Button android:id="@+id/btnOk" android:text="Ок" android:layout_width="100sp" android:layout_height="wrap_content" android:layout_x="38dip" android:layout_y="5dip"></Button>
    </AbsoluteLayout>
</LinearLayout>
